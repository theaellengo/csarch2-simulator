<h2 class="title">Decimal 64 Floating Point Converter</h2>
<form name="userinput" id="userinput" method="post">
  <div class="card bg-light">
    <div class="card-body">
      <h5 class="card-title">Input</h5>
      <div class="row">
        <div class="col-md-2">
          <label for="inputSign" class="form-label">Sign</label>
          <select class="form-control form-select form-select-sm" id="inputSign" name="inputSign">
            <option selected value=0>+</option>
            <option value=1>-</option>
          </select>
        </div>
        <div class="col-md-7">
          <label for="inputFloat" class="form-label">Significand</label>
          <input type="number" class="form-control" id="inputFloat" name="inputFloat">
        </div>
        <div class="col-md-3">
          <label for="inputExp" class="form-label">Exponent</label>
          <input type="number" class="form-control" id="inputExp" name="inputExp">
        </div>
      </div>
    </div>
  </div>
  <button type="button" class="btn btn-outline-primary convert" onclick="submit()">Convert</button>
</form>
<br>